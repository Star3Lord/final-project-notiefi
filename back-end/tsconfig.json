{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "outDir": "./build",
    "baseUrl": "./src",
    "rootDir": "./src",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["./src/**/*.js", "./src/**/*.ts"],
  "exclude": ["./node_modules/**"]
}
